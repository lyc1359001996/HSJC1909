<Window x:Class="Nucleic_Acid.MainWindow"
        x:Name="Wmain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nucleic_Acid"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="核酸检测" Height="342" Width="559" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <materialDesign:DialogHost Identifier="LoginDialog" CloseOnClickAway="True" >
        <Grid x:Name="backGrid" Loaded="backGrid_Loaded">
            <Grid.Background>
                <ImageBrush ImageSource="https://hlso.oss-cn-hangzhou.aliyuncs.com/hlso/static/img/login_background.f0d56f55.png"/>
            </Grid.Background>
            <Grid Margin="241,64,107,187">
                <materialDesign:PackIcon Kind="Account" Foreground="#DDFFFFFF" Margin="-25,47,0,0" />
                <TextBox x:Name="userNameBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True" materialDesign:TextFieldAssist.PrefixText=" " materialDesign:TextFieldAssist.SuffixText=" " Foreground="#DDFFFFFF">
                    <materialDesign:HintAssist.Hint>
                        <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                            <!--<materialDesign:PackIcon Kind="AccessPoint" />-->
                            <TextBlock>
                            username
                            </TextBlock>
                        </StackPanel>
                    </materialDesign:HintAssist.Hint>
                </TextBox>
            </Grid>
            <Grid Margin="241,129,107,122">
                <materialDesign:PackIcon Kind="LockOutline" Foreground="#DDFFFFFF" Margin="-25,45,0,0" />
                <PasswordBox x:Name="passWordBox" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" VerticalAlignment="Center" materialDesign:TextFieldAssist.HasClearButton="True" materialDesign:TextFieldAssist.PrefixText=" " materialDesign:TextFieldAssist.SuffixText=" " Foreground="#DDFFFFFF">
                    <materialDesign:HintAssist.Hint>
                        <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                            <!--<materialDesign:PackIcon Kind="AccessPoint" />-->
                            <TextBlock><Run Text="password"/></TextBlock>
                        </StackPanel>
                    </materialDesign:HintAssist.Hint>
                </PasswordBox>
            </Grid>
            <CheckBox x:Name="CheckBox_isRember" IsChecked="True" Style="{StaticResource MaterialDesignLightCheckBox}" Content="记住密码" Margin="241,189,228,99" FontFamily="Magneto" FontWeight="Normal" FontSize="12" Foreground="#DDCFC2C2" />
            <CheckBox x:Name="CheckBox_isAuto" IsChecked="True" Style="{StaticResource MaterialDesignLightCheckBox}" Content="自动登录" Margin="366,189,107,99" FontFamily="Magneto" FontWeight="Normal" FontSize="12" Foreground="#DDCFC2C2" />
            <Grid Margin="241,228,10,66">
                <Button Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="登录" Margin="2,8,0,8" Foreground="White" Click="Login_Click" HorizontalAlignment="Left" Width="85" FontFamily="NSimSun" FontSize="12" FontWeight="Normal"/>
                <Button Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="Exit" Margin="114,8,0,8" Foreground="White" Command="{Binding Exit_Click}" CommandParameter="{Binding ElementName=Wmain}" HorizontalAlignment="Left" Width="85"/>
                <Button Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonProgressAssist.Value="-1" materialDesign:ButtonProgressAssist.IsIndicatorVisible="True" materialDesign:ButtonProgressAssist.IsIndeterminate="True" Content="离线模式" Margin="214,8,0,8" Foreground="White" Command="{Binding Offline_Click}" CommandParameter="{Binding ElementName=Wmain}" HorizontalAlignment="Left" Width="85" FontFamily="NSimSun" FontWeight="Normal" FontSize="12"/>
            </Grid>

        </Grid>
    </materialDesign:DialogHost>
</Window>
